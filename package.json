{
  "name": "x-plot",
  "author": "stagas",
  "short": "stagas/x-plot",
  "description": "a web component that plots zoomable waveforms",
  "version": "1.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://git@github.com:stagas/x-plot.git"
  },
  "keywords": [
    "plot",
    "zoom",
    "waveform",
    "graph",
    "audio",
    "wave"
  ],
  "module": "dist/esm/index.js",
  "main": "dist/cjs/index.js",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "targets": {
    "main": {
      "context": "node",
      "engines": {
        "node": ">=16.0"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:cjs && npm run build:esm && npm run build:min && echo done.",
    "docs": "documentation readme src --resolve=node --pe ts --re ts --re d.ts --github --section=API --markdown-toc-max-depth=3",
    "test": "echo try: npm run playground",
    "playground": "vite --force --cors --https --clearScreen=false --open /playground/",
    "lint": "eslint src && prettier --check src",
    "build:watch": "onchange -i src --await-write-finish 400 -- npm run build",
    "docs:watch": "onchange -i src --await-write-finish 400 -- npm run docs",
    "test:watch": "jest --watchAll",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json && echo '{\"type\":\"module\"}' >dist/esm/package.json",
    "build:min": "esbuild src/index.ts --bundle --format=esm | terser --compress --module --mangle -o x-plot.min.js",
    "lint:fix": "eslint --fix src && prettier --write src",
    "clean": "rimraf dist",
    "prepack": "npm run build",
    "prepack:dry": "npm pack --dry-run",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@swc-node/register": "^1.4.0",
    "@tsconfig/node16": "^1.0.2",
    "@types/node": "^16.11.9",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "documentation": "github:documentationjs/documentation",
    "esbuild": "^0.13.15",
    "eslint": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-react": "^7.27.1",
    "husky": "^7.0.4",
    "onchange": "^7.1.0",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "terser": "^5.10.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2",
    "vite": "^2.6.14"
  }
}
